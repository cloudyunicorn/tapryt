{
  "extends": ["next/core-web-vitals", "@next/eslint-config-next"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-require-imports": "error"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/lib/generated/**",
    "**/.next/**",
    "**/prisma/generated/**",
    "**/prisma/migrations/**"
  ]
}